{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/images/*": ["public/images/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "pages",
    "components/folder/ActionButton",
    "components/folder/Category",
    "components/folder/Header/Header.tsx",
    "components/shared/Header.tsx",
    "components/folder/FolderButton",
    "components/common/Card",
    "components/common/CardList",
    "components/common/InputField",
    "components/common/Modal",
    "components/common/Layout",
    "components/common/Footer",
    "components/common/Navbar",
    "components/common/NoResults",
    "components/common/SearchBar",
    "utils",
    "types",
    "constants",
    "hooks"
  ],
  "exclude": ["node_modules"]
}
